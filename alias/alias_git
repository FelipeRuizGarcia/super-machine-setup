# ALIAS GIT
# user config
git config --global user.email "felipe_57@live.com.mx"
git config --global user.name "Felipe de Jesus Ruiz Garcia"
git config --global core.editor vim

alias list="git config --list"
alias config="git config "
alias global="git config --global"

alias add="git add "
alias clone="git clone "

alias chto="git checkout "

alias master="git checkout master"

alias newbr="git checkout -b "
alias br="git branch"
alias delbr="git branch -D "
alias mvbr="git branch -m"

alias log="git log --oneline --decorate"
alias all="git log --oneline --decorate --all"

alias res="git reset "
alias clean="git reset --hard "

alias status="git status"
alias dff="git diff"
alias cache="git diff --cached"

alias com="git commit"
alias amend="git commit --amend"

alias pull="git pull"
alias new="git remote add "
alias push="git push "

alias rv="git review "
